#!/usr/bin/env bash
set -euo pipefail

sheet="${HOME}/.tmux/CHEATSHEET.md"

if [[ ! -f "$sheet" ]]; then
  echo "Cheat sheet not found: $sheet"
  read -r -n 1 -s -p "Press any key to close..."
  echo
  exit 1
fi

if command -v bat >/dev/null 2>&1; then
  exec bat --style=plain --paging=always "$sheet"
fi

exec less "$sheet"
