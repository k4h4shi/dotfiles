##########################################################################
# .gitconfig
##########################################################################

# same setting as http://yuroyoro.hatenablog.com/entry/20101008/1286531851
[user]
	name = kotaro takahashi
	email = kotaro.t@k4h4shi.com
[color]
				status = auto
				diff = auto
				branch = auto
				grep = auto
[push]
				default = tracking
[core]
	excludesfile = /Users/k4h4shi/.gitignore_global
  autocrlf = input
  editor = vim
[alias]
				st = status
				sh = show
				so = remote show origin
				ft = fetch
				up = pull --rebase
				rbm = rebase master
				ad = add
				ci = commit -a
				cam = commit -a --amend
				co = checkout
				# about branch
				br = branch
				ba = branch -a
				bm = branch -- merged
				bn = branch --no-merged
				# about log
				wc = whatchanged
				ls = log --stat
				lp = log -p
				la = log --pretty=\"format:%ad %h (%an): %s\" --date=short
				lr = log origin
				oneline = log --pretty=oneline
				ranking = shortlog -s -n --no-merges
				# show log as tree
				log-graph = log --graph --date=short --pretty=format:'%Cgreen%h %cd %Cblue%cn %Creset%s'
				log-all = log --graph --all --color --pretty='%x09%h %cn%x09%s %Cred%d%Creset
				# about diff
				dm = diff master
				dw = diff --color-wards
				dc = diff --cached
				ds = diff --staged
				d1 = diff HEAD~
				d2 = diff HEAD~~
				d3 = diff HEAD~~~~
				d4 = diff HEAD~~~~~
				d5 = diff HEAD~~~~~~
				d10 = diff HEAD~~~~~~~~~~
				edit-unmerged = "!f() { git ls-files --unmerged | cut -f2 | sort -u ; }; 'f'"
				add-unmerged = "!f() { git ls-files --unmerged | cut f2 | sort -u ; }; git add 'f'"
				gr = grep
  gn = grep -n

[ghq]
	root = ~/src
[hub]
	protocol = https
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
[commit]
	template = /Users/k4h4shi/.stCommitMsg
